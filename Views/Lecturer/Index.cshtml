@model List<CMCSystem.Models.Lecturer>

<h2>Your Claims</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Submit New Claim</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No claims found. Submit a new claim above.</div>
}
else
{
    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Notes</th>
                <th>File</th>
                <th>Status</th>
                <th>Submitted Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Name</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.AdditionalNotes</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <a href="@claim.DocumentPath" target="_blank">View File</a>
                        }
                        else
                        {
                            <span class="text-muted">No file</span>
                        }
                    </td>
                    <td>
                        @if (claim.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (claim.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">@claim.Status</span>
                        }
                    </td>
                    <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
