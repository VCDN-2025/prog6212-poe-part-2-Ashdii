@{
    ViewData["Title"] = "Profile";
    var userName = ViewData["UserName"] as string ?? "John Doe";
    var role = ViewData["Role"] as string ?? "Lecturer";
    var email = ViewData["Email"] as string ?? "johndoe@example.com";
    var lastLogin = ViewData["LastLogin"] as string ?? "22 October 2025, 10:00 AM";
}

<style>
    .profile-container {
        min-height: calc(100vh - 200px);
        padding-bottom: 60px; /* Added padding to prevent footer overlap */
    }

    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 20px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .profile-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 30px 30px;
            transform: rotate(30deg);
            opacity: 0.5;
        }

    .profile-avatar {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #fff, #f8f9fa);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 48px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        border: 4px solid rgba(255, 255, 255, 0.3);
    }

    .profile-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        border: none;
        overflow: hidden;
        margin-bottom: 30px;
    }

    .profile-card-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 20px;
        border-bottom: none;
    }

    .profile-card-body {
        padding: 30px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid #f1f3f4;
    }

        .detail-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .detail-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 20px;
        color: white;
    }

    .detail-content h5 {
        margin-bottom: 5px;
        color: #2c3e50;
        font-weight: 600;
    }

    .detail-content p {
        margin-bottom: 0;
        color: #7f8c8d;
    }

    .action-section {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        text-align: center;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    .btn-dashboard {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .btn-dashboard:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-academic {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .btn-academic:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(79, 172, 254, 0.4);
            color: white;
        }

    .stats-section {
        margin-top: 30px;
        margin-bottom: 40px; /* Added margin to prevent footer overlap */
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: all 0.3s ease;
        border-top: 5px solid;
        height: 100%;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .stat-approved {
        border-top-color: #00b09b;
    }

    .stat-declined {
        border-top-color: #ff416c;
    }

    .stat-pending {
        border-top-color: #ffc107;
    }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 1rem;
        color: #7f8c8d;
        font-weight: 500;
    }

    .section-title {
        text-align: center;
        margin-bottom: 30px;
        color: #2c3e50;
        font-weight: 600;
        position: relative;
        padding-bottom: 15px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 2px;
        }

    /* Fixed media query */
    @@media (max-width: 768px) {
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-dashboard, .btn-academic {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }

        .profile-header {
            padding: 30px 15px;
        }

        .profile-container {
            padding-bottom: 40px;
        }
    }

    /* Additional spacing for mobile */
    @@media (max-width: 576px) {
        .stats-section {
            margin-bottom: 50px;
        }

        .profile-card-body {
            padding: 20px 15px;
        }

        .action-section {
            padding: 20px 15px;
        }
    }
</style>

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">
            👤
        </div>
        <h1 class="display-5 fw-bold">@userName's Profile</h1>
        <p class="lead mb-0">Welcome to your personalized dashboard</p>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="profile-card">
                <div class="profile-card-header">
                    <h3 class="mb-0">User Details</h3>
                </div>
                <div class="profile-card-body">
                    <div class="detail-item">
                        <div class="detail-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            🎭
                        </div>
                        <div class="detail-content">
                            <h5>Role</h5>
                            <p>@role</p>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            ✉️
                        </div>
                        <div class="detail-content">
                            <h5>Email</h5>
                            <p>@email</p>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                            ⏱️
                        </div>
                        <div class="detail-content">
                            <h5>Last Login</h5>
                            <p>@lastLogin</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="action-section">
        <h3 class="section-title">Quick Actions</h3>
        <p class="text-center text-muted mb-4">Access different management dashboards with one click</p>

        <div class="action-buttons">
            <a asp-controller="Admin" asp-action="ProgrammeCoordinator" class="btn btn-dashboard">
                🎓 Programme Coordinator
            </a>
            <a asp-controller="Admin" asp-action="AcademicManager" class="btn btn-academic">
                🧑‍💼 Academic Manager
            </a>
        </div>
    </div>

    <div class="stats-section">
        <h3 class="section-title">Claims Summary</h3>

        <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="stat-card stat-approved">
                    <div class="stat-icon text-success">✅</div>
                    <div class="stat-value text-success">@ViewData["ApprovedCount"]</div>
                    <div class="stat-label">Approved Claims</div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="stat-card stat-declined">
                    <div class="stat-icon text-danger">❌</div>
                    <div class="stat-value text-danger">@ViewData["DeclinedCount"]</div>
                    <div class="stat-label">Declined Claims</div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="stat-card stat-pending">
                    <div class="stat-icon text-warning">⏳</div>
                    <div class="stat-value text-warning">@ViewData["PendingCount"]</div>
                    <div class="stat-label">Pending Claims</div>
                </div>
            </div>
        </div>
    </div>
</div>